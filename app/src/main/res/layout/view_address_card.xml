<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/selected_row">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:layout_width="10dp"
                    android:layout_height="10dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/check1"
                        android:layout_marginStart="32dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_check"
                        android:backgroundTint="@color/grey_500" />

                    <TextView
                        android:id="@+id/defaulte1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/defaulte"
                        android:textSize="10sp"
                        android:visibility="gone" />
                </LinearLayout>

                <TextView
                    android:id="@+id/address1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/address"
                    android:layout_marginStart="22dp"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_16"
                    android:transitionName="addressTeansition" />

                <ImageView
                    android:id="@+id/editAddress1"
                    android:layout_width="41dp"
                    android:layout_height="41dp"
                    android:background="@drawable/ic_white_circle"
                    android:gravity="end"
                    android:scaleType="fitXY"
                    android:padding="10dp"
                    android:backgroundTint="#4DF2994A"
                    android:src="@drawable/ic_edit"
                    android:tint="@color/grey_700"
                    />

                <View
                    android:layout_width="10dp"
                    android:layout_height="10dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end">

                <TextView
                    android:id="@+id/tag1"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:background="@drawable/button_shape"
                    android:gravity="center"
                    android:text="@string/home"
                    android:textColor="@color/mdtp_white"
                    android:transitionName="addressTagTransition"
                    android:visibility="gone"/>

                <View
                    android:layout_width="10dp"
                    android:layout_height="10dp" />
            </LinearLayout>

            <View
                android:layout_width="10dp"
                android:layout_height="10dp" />
        </LinearLayout>


</RelativeLayout>
