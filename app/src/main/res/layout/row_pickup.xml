<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="70dp"
    >

    <CheckBox
        android:id="@+id/check_box"
        android:layout_width="25dp"
        android:layout_marginStart="30dp"
        android:layout_centerVertical="true"
        android:layout_height="20dp"
        android:buttonTint="@color/figmaBlue"
        />


    <ImageView
        android:id="@+id/cloth_iv"
        android:layout_toEndOf="@id/check_box"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_wash_fold"
        android:layout_width="@dimen/length_30"
        android:layout_height="@dimen/length_30"
        android:layout_marginStart="33dp"
        />

    <TextView
        android:id="@+id/order_name_tv"
        android:layout_toRightOf="@+id/cloth_iv"
        android:layout_width="match_parent"
        android:layout_toLeftOf="@+id/right_arrow_iv"
        android:singleLine="true"
        android:layout_height="wrap_content"
        android:text="Wash and Fold"
        android:layout_marginTop="31dp"
        android:layout_marginStart="13dp"
        android:fontFamily="@font/poppins_medium"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:layout_centerVertical="true"
        />


    <TextView
        android:id="@+id/order_time_tv"
        android:layout_toEndOf="@id/cloth_iv"
        android:layout_below="@+id/order_name_tv"
        android:layout_width="match_parent"
        android:singleLine="true"
        android:layout_height="wrap_content"
        android:text="(0 days)"
        android:layout_toLeftOf="@+id/right_arrow_iv"
        android:layout_marginStart="13dp"
        android:fontFamily="@font/poppins_light"
        android:textSize="12sp"
        android:textColor="@color/black"
        />

    <ImageView
        android:id="@+id/right_arrow_iv"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_chevron_right_black_24dp"
        android:layout_marginEnd="27dp"
        android:tint="#8A000000"
        android:alpha="0.54"
        android:layout_width="@dimen/length_30"
        android:layout_height="@dimen/length_30"
        android:layout_marginStart="33dp"
        />


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#8A000000"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/length_30"
        android:layout_marginEnd="27dp"
        />

</RelativeLayout>