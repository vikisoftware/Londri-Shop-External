<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    tools:context=".activity.LoginActivity"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        tools:ignore="UselessParent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/white"
            android:orientation="vertical"
            >

            <View
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="76dp"
                android:layout_height="76dp"

                android:layout_marginStart="34dp"

                android:contentDescription="@string/todo"
                android:src="@drawable/londri_icon" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/londri_tv"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="34dp"
                    android:layout_marginLeft="@dimen/margin_small"
                    android:fontFamily="@font/poppins_black"
                    android:gravity="center"
                    android:text="@string/londri_nm"
                    android:textColor="@color/black"
                    android:textSize="35sp"
                    tools:ignore="RtlHardcoded" />

                <TextView
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_small"
                    android:layout_toEndOf="@+id/londri_tv"
                    android:fontFamily="@font/poppins_black"
                    android:gravity="center"
                    android:text="@string/dotio"
                    android:textColor="@color/figmaGreen"
                    android:textSize="35sp" />
            </RelativeLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="0.1" />

            <TextView
                android:id="@+id/fresh_cloths_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginStart="34dp"
                android:fontFamily="@font/poppins_medium"
                android:gravity="center"
                android:text="@string/slogan"
                android:textColor="@color/black"
                android:textSize="@dimen/font_18" />


            <View
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="0.6" />

            <TextView
                android:id="@+id/confirm_tv"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="34dp"
                android:fontFamily="@font/poppins_regular"
                android:gravity="center"
                android:text="@string/Grow_your_Laundry_business_with_us"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="@dimen/font_16" />


            <EditText
                android:id="@+id/edtMobileNo"
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="46dp"
                android:layout_marginEnd="24dp"
                android:background="@drawable/grey_stroke"
                android:ems="12"
                android:fontFamily="@font/poppins_medium"
                android:hint="@string/mobile_no"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="10"
                android:paddingStart="@dimen/length_10"
                android:paddingEnd="@dimen/length_10"
                android:textColor="@color/black"
                android:textSize="17sp" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <RelativeLayout
                android:id="@+id/btnSendOtp"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginTop="100dp"
                android:layout_gravity="center_horizontal">


                <ImageView
                    android:id="@+id/clickNext"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:background="@drawable/button_shape_round"
                    android:contentDescription="@string/zero"
                    android:scaleType="fitXY"
                    android:tint="@color/black" />

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_centerInParent="true"
                    android:contentDescription="@string/zero"
                    android:padding="5dp"
                    android:src="@drawable/ic_chevron_right_black_24dp"
                    android:tint="@color/mdtp_white" />
            </RelativeLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>



